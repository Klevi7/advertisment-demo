<script>
  const stickyHeaderAd = document.getElementById('stickyHeaderAd');
  const stickyHeaderCloseBtn = document.getElementById('stickyHeaderCloseBtn');
  const stickyHeaderActionBtn = document.getElementById('stickyHeaderActionBtn');

  stickyHeaderCloseBtn.addEventListener('click', () => {
    stickyHeaderAd.style.display = 'none';
  });

  stickyHeaderActionBtn.addEventListener('click', () => {
